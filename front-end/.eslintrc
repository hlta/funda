{
    "parser": "@babel/eslint-parser",
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaVersion": 2021, 
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "babelOptions": {
            "presets": ["@babel/preset-react"]
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
    }
}
